# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Atlas Connection String (REQUIRED)
# Get this from: https://www.mongodb.com/cloud/atlas (free tier available)
# Format: mongodb+srv://username:password@cluster.mongodb.net/food-inventory?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/food-inventory?retryWrites=true&w=majority

# External URL (for WebSocket connections from outside network)
# Local: http://localhost:3000
# Railway: https://your-app-production.up.railway.app
EXTERNAL_URL=http://localhost:3000
